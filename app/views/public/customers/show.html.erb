<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-3" >
      <%= render 'layouts/application', tags: @tags %>
    </div>
    <div class="col-lg-9">
      <h2>マイページ</h2>
      <a>登録情報</a><br>
      <%= image_tag @customer.get_image %>
      <tbody>
        <table border="1" width="80%">
          <tr>
            <td width="30%">氏名</td>
            <td width="70%"><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>ニックネーム</td>
            <td><%= @customer.nickname %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </tbody>
      <a><%= link_to "編集する", customers_my_page_edit_path %></a><br>
      <a><%= link_to "いいねした記事", customers_my_page_nice_path %></a><br>
      <a><%= link_to "ノートを見る", customers_my_page_note_path %></a>
    </div>
  </div>
</div>