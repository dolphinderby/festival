<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h2>登録情報編集</h2>
      <%= form_with model: @customer, url: customers_my_page_update_path do |f| %>
      <tbody>
        <table width="80%">
          <tr>
            <td>ユーザーアイコン</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name, autofoucs: true %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
            <td>ニックネーム</td>
            <td><%= f.text_field :nickname %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
        </table>
      </tbody>
        <%= f.submit "編集内容を保存" %>
        <%= link_to '退会する', customers_confirm_path %>
      <% end %>
    </div>
  </div>
</div>