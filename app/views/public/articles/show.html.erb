<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <table class="table">
        <tr>
          <th>お祭り写真</th>
          <td><%= image_tag @article.get_image %></td>
        </tr>
        <tr>
          <th>お祭り名</th>
          <td><%= @article.name %></td>
        </tr>
        <tr>
          <th>副題</th>
          <td><%= @article.sub_title %></td>
        </tr>
        <tr>
          <th>記事本文</th>
          <td><%= @article.introduction %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @article.prefecture %></td>
        </tr>
        <tr>
          <th>開催場所</th>
          <td><%= @article.venue %></td>
        </tr>
        <tr>
          <th>開催日</th>
          <td><%= @article.event_date %></td>
        </tr>
        <% @article.tags.each do |tag| %>
          <span class= 'badge badge-primary'><%= tag.name %></span>
        <% end %>
      </table>
      <% if @article.niced_by?(current_customer) %>
        <p>
          <%= link_to article_nices_path(@article), method: :delete do %>
            ♥<%= @article.nices.count %> いいね
          <% end %>
        </p>
      <% else %>
        <p>
          <%= link_to article_nices_path(@article), method: :post do %>
            ♡<%= @article.nices.count %> いいね
          <% end %>
        </p>
      <% end %>
  </div>
</div>