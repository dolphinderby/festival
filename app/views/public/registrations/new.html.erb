<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="mx-auto">
<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :"名前" %><br />
    <a>(姓)　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></a>
    <a>(名)　<%= f.text_field :first_name, autocomplete: "first_name" %></a>
  </div>

  <div class="field">
    <%= f.label :"フリガナ" %><br />
    <a>(セイ)<%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></a>
    <a>(メイ)<%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %></a>
  </div>

  <div class="field">
    <%= f.label :"ニックネーム" %><br />
    <a>(姓)　<%= f.text_field :nickname, autocomplete: "nickname" %></a>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>
     </div>
  </div>
</div>