<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <%= image_tag @article.get_image %><br>
      <table class="table">
        <tr>
          <th>記事ID</th>
          <td><%= @article.id %></td>
        </tr>
        <tr>
          <th>お祭り名</th>
          <td><%= @article.name %></td>
        </tr>
        <tr>
          <th>副題</th>
          <td><%= @article.sub_title %></td>
        </tr>
        <tr>
          <th>記事本文</th>
          <td><%= @article.introduction %></td>
        </tr>
        <tr>
          <th>都道府県</th>
          <td><%= @article.prefecture %></td>
        </tr>
        <tr>
          <th>開催場所</th>
          <td><%= @article.venue %></td>
        </tr>
        <tr>
          <th>開催日</th>
          <td><%= @article.event_date %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @article.is_deleted %></td>
        </tr>
        <% @article.tags.each do |tag| %>
          <span class= 'badge badge-primary'><%= tag.name %></span>
        <% end %>
      </table>
      <%= link_to "編集する", edit_admin_article_path(@article.id) %>
      <div>
        <p>いいね：<%= @article.nices.count %>件</p>
        <p>コメント件数：<%= @article.comments.count %></p>
        <p>コメント一覧</p>
        <% @article.comments.each do |comment| %>
          <table>
            <tr>
              <td>
                <%= link_to admin_customer_path(comment.customer.id) do %>
                  <%= comment.customer.fullname %>
                  （<%= comment.customer.nickname %>）
                <% end %>
                <%= comment.customer.is_deleted_i18n %>
                <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
                <%= link_to "削除", admin_comment_path(comment), method: :delete %>
              </td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>