<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
        <label>会員ID</label>
          <%= @customer.id %><br>
        <label>氏名</label>
          <%= f.text_field :last_name, autofoucs: true %>
          <%= f.text_field :first_name %><br>
        <label>フリガナ</label>
          <%= f.text_field :last_name_kana %>
          <%= f.text_field :first_name_kana %><br>
        <label>ニックネーム</label>
          <%= f.text_field :nickname %><br>
        <label>メールアドレス</label>
          <%= f.text_field :email %><br>
        <label>会員ステータス</label>
  　       <%= f.radio_button :is_deleted, "active" %>
  　       <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, "deleted" %>
          <%= f.label :is_deleted, "退会" %><br>
        <%= f.submit "編集内容を保存" %>
      <% end %>
    </div>
  </div>
</div>