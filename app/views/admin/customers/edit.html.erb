<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h1>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td>姓<%= f.text_field :last_name, autofoucs: true %>名<%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td>メイ<%= f.text_field :last_name_kana %>セイ<%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム</th>
          <td><%= f.text_field :nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><%= f.radio_button :is_deleted, "active" %>
  　           <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted, "deleted" %>
              <%= f.label :is_deleted, "退会" %></td>
        </tr>
      </table>
        <%= f.submit "編集内容を保存" %>
      <% end %>
    </div>
  </div>
</div>