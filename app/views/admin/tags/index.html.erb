<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-lg-8">
      <h1>タグ一覧・追加</h1>
      <%= form_with model: @tag, url: admin_tags_path, method: :post do |f| %>
        <p>タグ名</p>
        <%= f.text_field :name %>
        <%= f.submit '新規投稿' %>
      <% end %><br>
    <table class="table">
        <thead>
          <tr>
            <th>タグID</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td>
                  <%= tag.name %>
              </td>
              <td>
                <%= link_to "編集する", edit_admin_tag_path(tag.id) %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <%= paginate @tags %>
      </table>
    </div>
  </div>
</div>
