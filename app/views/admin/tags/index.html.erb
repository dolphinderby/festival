<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h1>タグ一覧・追加</h1>
      <%= form_with model: @tag, url: admin_tags_path do |f| %>
        <p>タグ名</p>
        <%= f.text_field :tag %>
        <%= f.submit '新規投稿' %>
      <% end %>
    </div>
      <table class="table">
        <thead>
          <tr>
            <th>タグ一覧</th>
          </tr>
        </thead>
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td>
                <%= tag.name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
